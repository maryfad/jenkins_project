pipeline {
    agent any

    environment {
        VIRTUAL_ENV = '.venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat """
                REM Use full path to python so Jenkins can find it
                "C:\\Users\\user\\AppData\\Local\\Programs\\Python\\Python313\\python.exe" -m venv %VIRTUAL_ENV%

                call %VIRTUAL_ENV%\\Scripts\\activate
                python -m pip install --upgrade pip
                python -m pip install -r requirements.txt
                """
            }
        }

        stage('Lint') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                python -m unittest tests.test_app
                """
            }
        }

        stage('Coverage') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                coverage run -m unittest tests.test_app
                coverage report
                """
            }
        }

        stage('Security Scan') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                bandit -r .
                """
            }
        }

        stage('Deploy') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                echo Deploying application locally...
                python app.py
                """
            }
        }
    }
}
